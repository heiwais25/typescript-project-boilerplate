{
  "name": "typescript-project-boilerplate",
  "version": "0.1.0",
  "description": "Boilerplate codes for typescript project",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --fix src/**",
    "format": "prettier --write src"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.14.9",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.{ts,json}": [
      "prettier --ignore-path ./.prettierignore --write"
    ]
  }
}
